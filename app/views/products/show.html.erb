<h1><%= @product.name %></h1>

<% if current_user.try(:admin?) %>
  <button><%= link_to "Edit", edit_product_path(@product) %></button>
  <button><%= link_to "Delete", product_path(@product),
  :data => {:confirm => "You sure?",
    :method => "delete"} %></button>
<% end %>

<br>
<%= image_tag("coffee.png", class: "coffee-detail-image") %>
<p><%= @product.description %></p>
<p><%= number_to_currency(@product.price) %></p>
<p><%= @product.origin %></p>
<p><%= @product.variety %></p>

<hr>

<h3>Reviews:</h3>

<% if @product.reviews.any? %>
  <ul>
    <% @product.reviews.each do |review| %>
      <li>
        <%= review.author %> |
        <%= review.content %>
        <% if current_user && current_user.admin %>
          <button>
            <%= link_to "Delete", product_review_path(@product, review),
              :data => {:confirm => "Are you sure?",
              :method => "delete"}
            %>
          </button>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no reviews yet!</p>
<% end %>

<% if current_user %>
  <button><%= link_to "Add a review", new_product_review_path(@product) %></button>
<% end %>
